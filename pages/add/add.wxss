.container {
  padding: 20rpx;
}

.header {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 30rpx;
}

label {
  font-size: 28rpx;
  color: #333;
}

input {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

button {
  background-color: #007aff;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 新增头像上传部分的样式 */
.avatar {
  width: 80rpx;  /* 设置头像显示宽度 */
  height: 80rpx; /* 设置头像显示高度 */
  border-radius: 10rpx; /* 圆角 */
  margin-top: 10rpx; /* 顶部间距 */
}